<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg">

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:background="@drawable/d"
                android:contentDescription="image of event" />


                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_below="@+id/contact_image"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2sp"
                    card_view:cardUseCompatPadding="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    card_view:cardBackgroundColor="@color/cardbackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/tabbg"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="4dp"
                            android:layout_weight="0.7"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:weightSum="1">

                                <TextView
                                    android:id="@+id/contact1_name"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.7"
                                    android:layout_marginLeft="5dp"
                                    android:text="Title"
                                    android:textSize="16sp"
                                    android:textColor="@color/white"/>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/contact1_phone"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:text="Description"
                                android:textSize="14sp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view1"
                android:layout_below="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2sp"
                card_view:cardUseCompatPadding="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                card_view:cardBackgroundColor="@color/cardbackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tabbg"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="4dp"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/contact2_name"
                                android:layout_width="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.7"
                                android:text="Title"
                                android:textSize="16sp"
                                android:textColor="@color/white"/>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/contact2_phone"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:text="Description"
                            android:textSize="14sp"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>