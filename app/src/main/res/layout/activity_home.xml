<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/homescreenbg"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@drawable/mec_logo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:id="@+id/imageView" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/excellogo"
        android:id="@+id/excellogo"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/excel2016"
        android:src="@drawable/excellogotext"
        android:layout_below="@+id/excellogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/excel2016"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/daysrem"
            android:textColor="#fff"
            android:textSize="37dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"     android:layout_alignLeft="@+id/days"
            android:layout_alignStart="@+id/days"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="#fff"
                android:text="DAYS"
                android:id="@+id/daysleft"



                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="TO GO"
                android:textColor="#fff"
                android:id="@+id/togo"

                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="www.excelmec.org"
        android:id="@+id/link"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/middile"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="#c6000000">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/swipe"
            android:scaleType="fitCenter"
            android:id="@+id/image2"
            android:visibility="gone"
            />

    </LinearLayout>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:background="#000"
        android:id="@+id/signuplayer"
        android:layout_margin="20dp"
        android:layout_centerInParent="true">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signin to Continue"
            android:id="@+id/text_dialog"
            android:layout_below="@+id/a"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:textColor="#ff000000"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center">
            <com.google.android.gms.common.SignInButton
                android:layout_width="100dp"
                android:layout_height="50dp"

                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_yes"
                android:gravity="center_vertical|center_horizontal"
                android:layout_below="@+id/text_dialog"

                android:layout_marginBottom="20dp"

                android:layout_centerHorizontal="true"
                />
            <com.facebook.login.widget.LoginButton
                android:layout_width="100dp"
                android:layout_height="47dp"
                fb:com_facebook_login_text="LOGIN"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/btn_no"
                android:gravity="center_vertical|center_horizontal"
                android:layout_below="@+id/text_dialog"
                android:layout_marginBottom="20dp"
                android:background="#42a5f5"
                android:layout_centerHorizontal="true"


                />
        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>